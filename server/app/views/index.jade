extends layout
block content
    md-toolbar.md-default(layout="row" layout-align="center center" class="md-whiteframe-z3" ng-controller="toolbar" flex)
        md-button(href="/home") Interviewly for
        img(src="assets/img/prime-logo.png" alt="prime-logo" width="48" height="48" layout-margin="auto")
        md-button(href="/events" ng-hide="paths") Events
        md-button(href="/students" ng-hide="paths") Students
        md-button(href="/interviewers" ng-hide="paths") Interviewers
        md-button.md-primary.md-raised.md-hue-1(href="/new-event" ng-hide="paths") Create New Event
        span(flex)
        .menu(layout-align="center center")
            md-menu(cascade="true" direction="'down'" ng-hide="paths" md-offset="60,0")
                md-button(ng-click="$mdOpenMenu($event)") WELCOME {{user.username}}!
                    md-icon.i.material-icons(layout-margin) menu
                md-menu-content(width="2")
                    md-menu-item
                        md-button(href="/archived-events") ARCHIVED EVENTS
                    md-menu-item
                        md-button(href="/archived-students") ARCHIVED STUDENTS
                    md-menu-item
                        md-button(href="/archived-interviewers") ARCHIVED INTERVIEWERS
                    md-menu-item
                        md-button(href="/profile") PROFILE
                    md-menu-item
                        md-button(ng-click="logout()") LOGOUT
    .views(ng-view)
